{
	"compilerOptions": {
		"lib": [
			"DOM",
			"ES2017",
			"WebWorker"
		],
		"target": "es2017",
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": false,
	  	"noUnusedLocals" : true,
	  	//"noUnusedParameters": true,
		"types": [
			"svelte"
		],
		 "noImplicitAny": false,
	},
	"include": [
		"src/**/*",
		"src/node_modules/**/*"
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"static/*"
	],
}
